#shader vertex
#version 330 core

layout(location = 0) in vec2 pos;

uniform mat4 rotMat;

void main()
{
	gl_Position = rotMat * vec4(pos, 0.0f, 1.0f);
}

#shader fragment
#version 330 core

out vec4 outcolor;

uniform float colorVariation;

void main()
{
	outcolor = vec4(colorVariation * 0.5, 0.3f, colorVariation, 1.0f);
}